<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="100"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@+id/user_reviews_rc"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:alpha="1.0"
            android:scaleX="1.3"
            android:scaleY="1.3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/user_dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="@+id/background"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/background" />
        <Constraint
            android:id="@+id/user_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.509"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/user_dp">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#222222" />
        </Constraint>
        <Constraint
            android:id="@+id/user_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/user_details_name" />


        <Constraint
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/user_details_description" />
        <Constraint
            android:id="@+id/user_reviews_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            motion:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/infoContainer"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/img_notifs"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:alpha="0.9" />

        <Constraint
            android:id="@+id/user_dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/user_details_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            motion:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            motion:layout_constraintBottom_toBottomOf="@+id/user_dp"
            motion:layout_constraintTop_toTopOf="@+id/user_dp"
            motion:layout_constraintStart_toEndOf="@+id/user_dp"
            motion:layout_constraintEnd_toStartOf="@+id/img_search">

            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/text_color" />

        </Constraint>
        <Constraint
            android:id="@+id/user_details_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="13sp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/background" />


        <Constraint
            android:id="@+id/infoContainer"
            android:layout_height="1dp"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@+id/user_details_name" />

        <Constraint
            android:id="@+id/user_reviews_rc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/infoContainer"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:elevation="5dp"
            motion:layout_constraintEnd_toStartOf="@id/img_inbox"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toTopOf="@+id/user_details_name"
            android:id="@+id/img_search"
            motion:layout_constraintBottom_toBottomOf="@+id/user_details_name"
            motion:layout_constraintStart_toEndOf="@+id/user_details_name" />
        <Constraint
            android:layout_marginEnd="10dp"
            android:layout_height="35dp"
            motion:layout_constraintTop_toTopOf="@+id/img_search"
            android:layout_width="35dp"
            motion:layout_constraintEnd_toStartOf="@id/img_settings"
            android:id="@+id/img_inbox"
            motion:layout_constraintBottom_toBottomOf="@+id/img_search"
            motion:layout_constraintStart_toEndOf="@+id/img_search" />
        <Constraint
            android:layout_marginEnd="3dp"
            android:layout_height="35dp"
            motion:layout_constraintTop_toTopOf="@+id/img_inbox"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="35dp"
            android:id="@+id/img_settings"
            motion:layout_constraintBottom_toBottomOf="@+id/img_inbox" />

    </ConstraintSet>
</MotionScene>