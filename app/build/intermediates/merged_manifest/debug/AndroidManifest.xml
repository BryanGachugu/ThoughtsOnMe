    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/test_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/test_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ThoughtSOnMeLight" >
        <activity
            android:name="com.gachugusville.thoughtsonme.Settings.AccountSettingsActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.SearchDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.SearchActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.CHAT.ConversationListActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.LogInActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.UserDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.DashboardProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.Profile.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.IntroFragmentsActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.GoogleSignInActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.AddReviewActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.TargetDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.OtherActivities.DashboardActivity"
            android:exported="true" />
        <activity
            android:name="com.gachugusville.thoughtsonme.CHAT.MessagesActivity"
